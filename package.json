{
  "name": "otp-manager",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "dist": "cross-env NODE_ENV=production electron-builder",
    "package": "cross-env NODE_ENV=production electron-packager --overwrite"
  },
  "build": {
    "appId": "otp.manager",
    "productName": "OTP Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**" ,
      "view/**" ,
      "assets/**" 
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "category": "otp.manager.utils",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3"
  }
}
